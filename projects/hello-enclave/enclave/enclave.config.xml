<!-- enclave.config.xml
     Configures the enclave's resource limits and properties.
     These values are embedded in the enclave binary and enforced by the CPU.
-->
<EnclaveConfiguration>
    <!-- Thread pool size inside the enclave.
         Each TCS (Thread Control Structure) allows one thread to enter the enclave.
         More TCS = more concurrent ECALLs, but uses more EPC memory. -->
    <ProdID>0</ProdID>
    <ISVSVN>0</ISVSVN>

    <!-- Stack size per thread (64 KB) -->
    <StackMaxSize>0x10000</StackMaxSize>
    <StackMinSize>0x10000</StackMinSize>

    <!-- Heap size (1 MB) â€” This is the enclave's internal heap.
         For a DB workload, you'd increase this significantly.
         On real hardware, this comes from the limited EPC (~128-256 MB). -->
    <HeapMaxSize>0x100000</HeapMaxSize>
    <HeapMinSize>0x100000</HeapMinSize>
    <HeapInitSize>0x100000</HeapInitSize>

    <!-- Number of TCS (thread contexts) -->
    <TCSNum>1</TCSNum>

    <TCSPolicy>1</TCSPolicy>

    <!-- Debug mode: 1 = debuggable (for development), 0 = production -->
    <DisableDebug>0</DisableDebug>

    <!-- Misc select and Misc mask -->
    <MiscSelect>0</MiscSelect>
    <MiscMask>0xFFFFFFFF</MiscMask>
</EnclaveConfiguration>
